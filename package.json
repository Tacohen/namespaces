{
  "name": "namespaces-js",
  "version": "0.2.0",
  "description": "Angular-flavored DI container.",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ziflex/namespaces.git"
  },
  "authors": [
    "Tim Voronov <ziflex@gmail.com>"
  ],
  "scripts": {
    "build": "npm run lint && npm run build:bower & npm run build:npm",
    "build:npm": "babel src --out-dir lib",
    "build:bower": "browserify --entry src/index.js --outfile dist/namespaces.js --standalone Namespaces",
    "clean:npm": "rimraf lib",
    "clean:bower": "rimraf dist",
    "package:npm": "npm run clean:npm && npm run lint && npm run build:npm",
    "package:bower": "npm run clean:bower && npm run lint && mkdir -p dist && npm run build:browser",
    "prepublish": "npm run package:npm",
    "lint": "eslint src test/unit --config ./.eslintrc",
    "cover": "mochify --recursive ./test/unit --transform babelify  --reporter spec --plugin [ mochify-istanbul --report html --report text --instrumenter babel-istanbul --exclude '**/test/**/*' --exclude '**/node_modules/**/*' ] ",
    "test": "mochify --recursive ./test/unit --transform babelify  --reporter spec"
  },
  "license": "MIT",
  "keywords": [
    "di",
    "dependency",
    "injection",
    "injector",
    "resolver",
    "modules",
    "angular"
  ],
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "babel-istanbul": "^0.5.9",
    "babelify": "^6.3.0",
    "browserify": "^11.2.0",
    "chai": "^3.3.0",
    "chai-spies": "^0.7.1",
    "eslint": "^1.6.0",
    "eslint-config-airbnb": "^0.1.0",
    "eslint-plugin-mocha": "^1.0.0",
    "mocha": "^2.3.3",
    "mochify": "^2.14.3",
    "mochify-istanbul": "^2.3.0",
    "rimraf": "2.4.3"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  }
}
